@model MiniProjet.ViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "Create New Role";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-gradient-primary text-white text-center rounded-3 py-4">
                <h3>Créer un Nouveau Rôle</h3>
                <p class="lead mb-0">Attribuez un rôle à un utilisateur</p>
            </div>
            <div class="card-body px-4 py-5">
                <form asp-action="CreateRole" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>

                    <!-- Role Name Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="RoleName" class="form-control form-control-lg" placeholder="Entrez le nom du rôle" />
                        <label asp-for="RoleName">Nom du rôle</label>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success btn-lg w-100 py-2 mb-3">
                        <i class="fas fa-plus-circle"></i> Créer le rôle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
