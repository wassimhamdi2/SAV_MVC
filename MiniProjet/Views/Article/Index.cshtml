@model IEnumerable<MiniProjet.Models.Article>

@{
    ViewBag.Title = "List Articles";
}

<div class="container mt-5">
    <!-- Header with Add Article Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Articles</h3>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Article
        </a>
    </div>

    <!-- Article Cards -->
    <div class="row">
        @foreach (var article in Model)
        {
            var photoPath = "~/images/" + (article.Image ?? "noimage.jpg");
                <div class="col-lg-4 col-md-6 mb-4">
                    <!-- Card for each article -->
                    <div class="card h-100 shadow-sm">
                        <!-- Article Image -->
                        <img class="card-img-top" src="@photoPath" asp-append-version="true" alt="@article.Désignation" style="max-height: 200px; object-fit: cover;">

                        <div class="card-body">
                            <!-- Article Title -->
                            <h5 class="card-title">@article.Désignation</h5>
                            <!-- Article Price -->
                            <p class="card-text"><strong>Prix:</strong> @article.Prix</p>
                        </div>

                        <!-- Card Footer with Action Buttons -->
                        <div class="card-footer d-flex justify-content-around">
                            <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
