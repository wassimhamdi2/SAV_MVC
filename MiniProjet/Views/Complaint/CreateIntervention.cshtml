@model MiniProjet.Models.Intervention

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <!-- Card Container for the Form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Title -->
            <h1 class="card-title">Ajouter Intervention</h1>
            <hr />

            <!-- Intervention Form -->
            <form asp-action="Create" method="post">

                <!-- Scheduled At Field -->
                <div class="mb-3">
                    <label asp-for="ScheduledAt" class="form-label">Scheduled At</label>
                    <input asp-for="ScheduledAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="ScheduledAt" class="text-danger"></span>
                </div>

                <!-- Warranty Checkbox -->
                <div class="mb-3 form-check">
                    <input asp-for="IsUnderWarranty" class="form-check-input" type="checkbox" />
                    <label asp-for="IsUnderWarranty" class="form-check-label">Sous garantie</label>
                </div>

                <!-- Total Cost Field -->
                <div class="mb-3">
                    <label asp-for="TotalCost" class="form-label">Coût Total</label>
                    <input asp-for="TotalCost" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="TotalCost" class="text-danger"></span>
                </div>

                <!-- Technicien Dropdown -->
                <div class="form-group mb-4">
                    <label asp-for="TechnicienId" class="control-label">Technicien</label>
                    <select asp-for="TechnicienId" class="form-control" asp-items="ViewBag.TechnicienId">
                        <option value="">Select Technicien</option>
                    </select>
                    <span asp-validation-for="TechnicienId" class="text-danger"></span>
                </div>

                <!-- Submit and Cancel Buttons -->
                <button type="submit" class="btn btn-primary">Ajouter</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
