@model MiniProjet.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-success text-white text-center rounded-4 pt-4 pb-4">
                <h2>Inscription</h2>
            </div>
            <div class="card-body px-5 py-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>

                    <!-- Email Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Entrez votre email" />
                        <label asp-for="Email">Adresse e-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Entrez votre mot de pass" />
                        <label asp-for="Password">Mot de passe</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirmer votre mot de pass" />
                        <label asp-for="ConfirmPassword">Confirmer le mot de passe</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success btn-lg w-100 py-2">Inscription</button>
                </form>
            </div>
            <div class="card-footer text-center text-muted py-3">
                <small>Vous avez déjà un compte ? <a href="#">Connectez-vous</a></small>
            </div>
        </div>
    </div>
</div>
