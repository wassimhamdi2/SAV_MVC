@model MiniProjet.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Connexion";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-gradient-primary text-white text-center rounded-3 py-4">
                <h3>Bienvenue</h3>
                <p class="lead mb-0">Connectez-vous pour accéder à votre compte</p>
            </div>
            <div class="card-body px-4 py-5">
                <form asp-route-returnurl="@returnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>

                    <!-- Email Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Entrez votre email" />
                        <label asp-for="Email">Adresse e-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Entrez votre mot de passe" />
                        <label asp-for="Password">Mot de passe</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="form-check mb-4">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Se souvenir de moi
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-lg w-100 py-2 mb-3">Connexion</button>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="text-muted">Mot de passe oublié ?</a>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center text-muted py-3">
                <small>Vous n'avez pas de compte ? <a href="#">Inscrivez-vous</a></small>
            </div>
        </div>
    </div>
</div>

