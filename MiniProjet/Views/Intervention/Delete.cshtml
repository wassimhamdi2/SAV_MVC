@model MiniProjet.Models.Intervention

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <!-- Warning Message -->
    <div class="alert alert-warning text-center">
        <h1 class="display-6">Delete Intervention</h1>
        <p>Êtes-vous sûr de vouloir supprimer cette intervention ?</p>
    </div>

    <!-- Intervention Details Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Intervention Details</h4>
            <hr />
            <dl class="row">
                <!-- Scheduled At -->
                <dt class="col-sm-4">Programmé à</dt>
                <dd class="col-sm-8">@Model.ScheduledAt.ToString("dd/MM/yyyy")</dd>

                <!-- Under Warranty -->
                <dt class="col-sm-4">Sous Garantie</dt>
                <dd class="col-sm-8">
                    @if (Model.IsUnderWarranty)
                    {
                            <span class="text-success">Oui</span>
                    }
                    else
                    {
                            <span class="text-danger">Non</span>
                    }
                </dd>

                <!-- Total Cost -->
                <dt class="col-sm-4">Coût Total</dt>
                <dd class="col-sm-8">@Model.TotalCost.ToString("C")</dd>

                <!-- Complaint ID -->
                <dt class="col-sm-4">Reclamation ID</dt>
                <dd class="col-sm-8">@Model.Complaint?.Id</dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Supprimer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>
